# åˆ¤æ–­ç»“æœçŠ¶æ€
alert() {
	local val=$1
	local ret=$?
	if [[ ${ret} -eq 0 ]]; then
		yello "${val} æˆåŠŸ"
	else
		red "${val} å¤±è´¥"
	fi
}
# æç¤º
green() {
	local val=$1
	echo -e "\033[32m ${val} \033[0m"
}
# ç¦æ­¢
red() {
	local val=$1
	echo -e "\033[31m ${val} \033[0m"
}
# è­¦å‘Š
yello() {
	local val=$1
	echo -e "\033[33m ${val} \033[0m"
}

blue() {
	local val=$1
	echo -e "\033[34m ${val} \033[0m"
}
# é’ç»¿è‰²
cyan() {
	local val=$1
	echo -e "\033[36m ${val} \033[0m"
}
# retrun 1 is exist. return 0 no exist.
in_array () {     
	arr=$1; # æ•°ç»„
	param=$2; # è¢«åˆ¤æ–­çš„å¯¹è±¡
	shift
	echo "${arr[@]}"
    for elem in "${arr[@]}";
    do		
        [[ "$param" = "$elem" ]] && return 1;		
    done;
    return 0
}

